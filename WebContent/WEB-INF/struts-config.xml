<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">

<struts-config>
	<form-beans>
		<form-bean name="AddContactValidationForm" type="actionForm.contact.AddContactValidationForm"/>
		<form-bean name="UpdateContactValidationForm" type="actionForm.contact.UpdateContactValidationForm"/>
		<form-bean name="SearchContactValidationForm" type="actionForm.contact.SearchContactValidationForm"/>			
		<form-bean name="LoginValidationForm" type="actionForm.LoginValidationForm"/>
	</form-beans>
	
	<action-mappings>
		
		<action path = "/Login" type ="servletAction.LoginAction"
				name = "LoginValidationForm" scope = "request"
				input = "/pages/login.jsp">
			<forward name = "success" path ="/pages/main.jsp"/>
			<forward name = "error" path ="/pages/login.jsp"/>
		</action>
		
		<action path = "/Accueil" type ="servletAction.AccueilAction">
			<forward name = "success" path="/pages/main.jsp"/>
		</action>	
	
		<action path="/createContact" forward="/pages/createContact.jsp"/>
		
		<action path="/updateContact" forward="/pages/updateContact.jsp"/>
	
		<action path="/deleteContact" forward="/pages/main.jsp"/>
		
		<action path="/searchContact" forward="/pages/main.jsp"/>
				
		<action path="/index" forward="/pages/main.jsp"/>
	
		<action path="/AddContact" 
					type="servletAction.AddContactAction"
					name="AddContactValidationForm" scope="request"
					input="/pages/createContact.jsp">
				<forward name="success" path="/pages/main.jsp" />
				<forward name="error" path="/pages/error.jsp" />
		</action>
		
		<action path = "/UpdateContact" type = "servletAction.UpdateContactAction"
					name = "UpdateContactValidationForm" scope ="request"
					input = "/pages/updateContact.jsp">
				<forward name = "success" path = "/pages/main.jsp"/>
				<forward name = "error" path = "/pages/error.jsp"/>		
		</action>
		
		<action path = "/DeleteContact" type ="servletAction.DeleteContactAction">
			<forward name = "success" path="/pages/main.jsp"/>
		</action>	

		<action path = "/SearchContact" type ="servletAction.SearchContactAction"
				name = "SearchContactValidationForm" scope = "request"
				input = "/pages/main.jsp">
			<forward name = "success" path="/pages/main.jsp"/>
		</action>
			
		</action-mappings>

<!-- ========== Ressources de definitions de messages =========================== -->
	<message-resources parameter="Resources" />

</struts-config>
